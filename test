<script>
document.addEventListener('DOMContentLoaded', function() {
    
    const strategyChartCtx = document.getElementById('strategyChart').getContext('2d');
    const strategyChart = new Chart(strategyChartCtx, {
        type: 'doughnut',
        data: {
            labels: ['Strategy', 'Creative'],
            datasets: [{
                data: [90, 10],
                backgroundColor: ['#008eb3', '#ffcd00'],
                borderColor: '#FFFFFF',
                borderWidth: 4,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            cutout: '70%',
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        font: {
                            size: 14,
                            family: 'Inter'
                        },
                        color: '#4b5054'
                    }
                },
                tooltip: {
                    callbacks: {
                        label: function(context) {
                            const label = context.label || '';
                            const value = context.parsed;
                            return `${label}: ${value}%`;
                        }
                    }
                }
            }
        }
    });

    let creativePercentage = 10;
    let direction = 1; // 1 for increasing, -1 for decreasing
    const minCreative = 5;
    const maxCreative = 20;
    const step = 1;

    setInterval(() => {
        creativePercentage += direction * step;

        if (creativePercentage >= maxCreative || creativePercentage <= minCreative) {
            direction *= -1; // Reverse direction
        }

        const strategyPercentage = 100 - creativePercentage;

        strategyChart.data.datasets[0].data = [strategyPercentage, creativePercentage];
        strategyChart.data.labels = [`Strategy (${strategyPercentage}%)`, `Creative (${creativePercentage}%)`];
        strategyChart.update();
    }, 1500); // Update every 1.5 seconds


    const kpiChartCtx = document.getElementById('kpiChart').getContext('2d');
    new Chart(kpiChartCtx, {
        type: 'bar',
        data: {
            labels: ['Views', 'Reach', 'Engagement', 'Profile Visits', 'Applied'], // Changed order here
            datasets: [{
                label: 'Campaign Performance',
                data: [12000, 8500, 650, 320, 45], // Reordered data to match labels
                backgroundColor: ['#008eb3', '#ffcd00', '#008eb3', '#ffcd00', '#4b5054'],
                borderColor: '#008eb3',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            indexAxis: 'y',
            plugins: {
                legend: {
                    display: false
                },
                title: {
                    display: true,
                    text: 'Hypothetical KPI Results',
                    font: { size: 16, family: 'Inter' },
                    color: '#4b5054'
                }
            },
            scales: {
                x: {
                    beginAtZero: true,
                    grid: {
                        display: false
                    }
                },
                y: {
                     grid: {
                        display: false
                    }
                }
            }
        }
    });

    const flipCards = document.querySelectorAll('.flip-card');
    flipCards.forEach(card => {
        card.addEventListener('click', () => {
            card.classList.toggle('is-flipped');
        });
    });

    const tabButtons = document.querySelectorAll('.tab-button');
    const tabContents = document.querySelectorAll('.tab-content');
    tabButtons.forEach(button => {
        button.addEventListener('click', () => {
            const tabId = button.dataset.tab;

            tabButtons.forEach(btn => {
                btn.classList.remove('tab-active');
                btn.classList.add('tab-inactive');
            });
            button.classList.add('tab-active');
            button.classList.remove('tab-inactive');

            tabContents.forEach(content => {
                if (content.id === tabId) {
                    content.classList.remove('hidden');
                } else {
                    content.classList.add('hidden');
                }
            });
        });
    });

    let currentScene = 0;
    const scenes = document.querySelectorAll('.storyboard-scene');
    const totalScenes = scenes.length;
    const storyboardContainer = document.getElementById('storyboard-container');
    const nextBtn = document.getElementById('next-scene');
    const prevBtn = document.getElementById('prev-scene');

    // Update the storyboard position
    function updateStoryboard() {
        storyboardContainer.style.transform = `translateX(-${currentScene * 100}%)`;
    }

    nextBtn.addEventListener('click', () => {
        currentScene = (currentScene + 1) % totalScenes;
        updateStoryboard();
    });

    prevBtn.addEventListener('click', () => {
        currentScene = (currentScene - 1 + totalScenes) % totalScenes;
        updateStoryboard();
    });
    
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    const navLinks = document.querySelectorAll('.nav-link');
    const sections = document.querySelectorAll('main section');

    const observerOptions = {
        root: null,
        rootMargin: '0px',
        threshold: 0.4
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                navLinks.forEach(link => {
                    link.classList.add('inactive-nav');
                    link.classList.remove('active-nav');
                    if (link.getAttribute('href').substring(1) === entry.target.id) {
                        link.classList.add('active-nav');
                        link.classList.remove('inactive-nav');
                    }
                });
            }
        });
    }, observerOptions);

    sections.forEach(section => {
        observer.observe(section);
    });

    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e) {
            e.preventDefault();
            if (mobileMenu.classList.contains('hidden') === false) {
                mobileMenu.classList.add('hidden');
            }
            document.querySelector(this.getAttribute('href')).scrollIntoView({
                behavior: 'smooth'
            });
        });
    });
});
</script>
</body>
</html>
